{% if shop.metafields.ninja_seo_site.all == 1 %}
	<meta name="robots" content="noindex,nofollow" />
{% else %}
	{% assign noindex_urls_normal = shop.metafields.seo.noindex_url_normal | split: ',' %}
	{% assign noindex_url_normal_found = false %}

    {% for noindex_url_normal in noindex_urls_normal %}
      {% if request.path == noindex_url_normal %}
	      <meta name="robots" content="noindex,follow" />

		{% assign noindex_url_normal_found = true %}
      {% endif %}
    {% endfor %}

	{% if noindex_url_normal_found == false %}
      {% if template contains 'search' %}
          {% if shop.metafields.ninja_seo_site.pagination == 1 and canonical_url contains 'page=' %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif shop.metafields.ninja_seo_site.search == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% endif %}
      {% elsif template contains 'cart' and shop.metafields.ninja_seo_site.cart == 1 %}
          <meta name="robots" content="noindex,nofollow" />
      {% elsif template contains 'login' and shop.metafields.ninja_seo_site.login == 1 %}
          <meta name="robots" content="noindex,nofollow" />
      {% elsif template contains 'blog' %}
          {% if blog.metafields.seo.hidden == blank and shop.metafields.ninja_seo_site.pagination == 1 and canonical_url contains 'page=' %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif blog.metafields.seo.hidden == 0 and shop.metafields.ninja_seo_site.pagination == 1 and canonical_url contains 'page=' %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif blog.metafields.seo.hidden == blank and shop.metafields.ninja_seo_blogs.tags == 1 and current_tags %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif blog.metafields.seo.hidden == 0 and shop.metafields.ninja_seo_blogs.tags == 1 and current_tags %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif blog.metafields.seo.noindex_nofollow == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif blog.metafields.seo.noindex == 1 %}
              <meta name="robots" content="noindex,follow" />
          {% endif %}
      {% elsif template contains 'collection' %}
          {% if collection.metafields.seo.hidden == blank and shop.metafields.ninja_seo_site.pagination == 1 and canonical_url contains 'page=' %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif collection.metafields.seo.hidden == 0 and shop.metafields.ninja_seo_site.pagination == 1 and canonical_url contains 'page=' %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif collection.metafields.seo.hidden == blank and shop.metafields.ninja_seo_collection.tags == 1 and current_tags %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif collection.metafields.seo.hidden == 0 and shop.metafields.ninja_seo_collection.tags == 1 and current_tags %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif collection.current_vendor and shop.metafields.ninja_seo_collection.vendors == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif collection.current_type and shop.metafields.ninja_seo_collection.types == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif request.path == '/collections/all' and shop.metafields.ninja_seo_collection.allpage == 1 %}
              <meta name="robots" content="noindex,follow" />
          {% elsif collection.handle == blank and shop.metafields.ninja_seo_collection.root == 1 %}
              <meta name="robots" content="noindex,follow" />
          {% elsif collection.metafields.seo.noindex_nofollow == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif collection.metafields.seo.noindex == 1 %}
              <meta name="robots" content="noindex,follow" />
          {% endif %}
      {% elsif template contains 'product' %}
          {% if product.metafields.seo.noindex_nofollow == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif product.metafields.seo.noindex == 1 %}
              <meta name="robots" content="noindex,follow" />
          {% endif %}
      {% elsif template contains 'page' %}
          {% if page.metafields.seo.noindex_nofollow == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif page.metafields.seo.noindex == 1 %}
              <meta name="robots" content="noindex,follow" />
          {% endif %}
      {% elsif template contains 'article' %}
          {% if article.metafields.seo.noindex_nofollow == 1 %}
              <meta name="robots" content="noindex,nofollow" />
          {% elsif article.metafields.seo.noindex == 1 %}
              <meta name="robots" content="noindex,follow" />
          {% endif %}
      {% endif %}
	{% endif %}
{% endif %}